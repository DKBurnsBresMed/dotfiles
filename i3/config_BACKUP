# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
#-c /home/darren/.i3/i3blocks.conf
bar {
  	status_command i3blocks -c /home/darren/.i3/i3blocks.conf
  	position top
	colors {
		#background colour of the bar
		background $bg-color
		#Colour of the separators between the categories
		separator #inactive-text-color
		#Colours of different workspace status notifiers
		##################################################################################
		# Category           border             background         text			 #
		##################################################################################
		focused_workspace  $bg-color          $bg-color          $text-color		 #
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color	 #
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color		 #
		##################################################################################
	}
}
